<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@drawable/bg_title_bar"
    android:gravity="center_vertical"
    android:id="@+id/relativeLayout">

    <!--ImageView
        android:onClick="onTitleBarClick"
        android:id="@+id/title_bar_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="3.0dip"
        android:gravity="center"
        android:src="@drawable/ic_top_bar_category" /-->

    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="75.0dip"
        android:paddingRight="75.0dip"
        android:singleLine="true"
        android:text="Title"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:background="#ecebf1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园卡"
        android:textSize="15sp"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="7dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/btn_main_card"
        android:onClick="onFormMainClick"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/card"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:id="@+id/imageView" />

        <LinearLayout
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="一卡通"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="30dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供校园一卡通余额查询，消费情况查询，以及挂失与修改密码服务"/>

        </LinearLayout>

    </LinearLayout>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="教务"
        android:textSize="15sp"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="5dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:id="@+id/btn_main_schedule"
        android:onClick="onFormMainClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/menu_schedule"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:id="@+id/imageView8" />

        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="课程表"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供课程表查看，课程表下载，还能自定义课表"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/btn_main_score"
        android:onClick="onFormMainClick"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/menu_mark"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:id="@+id/imageView9" />

        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="成绩查询"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供所有考试成绩查询，GPA查询"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:id="@+id/btn_main_emptyroom"
        android:onClick="onFormMainClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/menu_classroom"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            />
        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="空教室查询"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供指定时间内的空教室信息查询服务"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_marginLeft="7dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书馆"
        android:textSize="15sp"
        android:layout_marginTop="5dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:id="@+id/btn_main_guancang_library"
        android:onClick="onFormMainClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/menu_library"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            />
        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="馆藏查询"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供图书馆馆藏状态查询，书本位置查询"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:id="@+id/btn_main_personal"
        android:onClick="onFormMainClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/menu_person"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            />
        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="个人中心"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供书本续借，还书日期查询"></TextView>
        </LinearLayout>







</LinearLayout>
    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>




    <TextView
        android:layout_marginLeft="7dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络服务"
        android:textSize="15sp"
        android:layout_marginTop="5dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:onClick="onFormMainClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/main_gonet"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            />
        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="快通服务"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供快通流量查询，套餐修改，开停机以及充值服务"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:onClick="onFormMainClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="5dip"
            android:background="@drawable/main_kuaitong"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            />
        <LinearLayout
            android:layout_marginTop="7dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="无线登录"
                android:textSize="12sp"/>
            <TextView
                android:textSize="11sp"
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供CMCC以及ChinaUnicom快捷登录服务"></TextView>
        </LinearLayout>







    </LinearLayout>
    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>
</LinearLayout>












    </ScrollView>

</LinearLayout>




