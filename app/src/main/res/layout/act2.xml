<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ecebf1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园卡"
        android:textSize="17sp"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="7dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/card"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="一卡通"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供校园一卡通余额查询，消费情况查询，以及挂失与修改密码服务"/>

        </LinearLayout>

    </LinearLayout>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="教务"
        android:textSize="17sp"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="5dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="8dip"
            android:background="@drawable/menu_schedule"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="课程表"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供课程表查看，课程表下载，还能自定义课表"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="8dip"
            android:background="@drawable/menu_mark"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="成绩查询"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供所有考试成绩查询，GPA查询"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="8dip"
            android:background="@drawable/menu_classroom"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="空教室查询"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供指定时间内的空教室信息查询服务"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_marginLeft="7dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书馆"
        android:textSize="17sp"
        android:layout_marginTop="5dip"
        />


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="8dip"
            android:background="@drawable/menu_library"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="馆藏查询"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供图书馆馆藏状态查询，书本位置查询"/>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:background="#dcdada"
        android:layout_width="match_parent"
        android:layout_height="1dip"></LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="8dip"
            android:background="@drawable/menu_person"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="个人中心"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提供书本续借，还书日期查询"></TextView>
        </LinearLayout>




</LinearLayout>
</LinearLayout>






