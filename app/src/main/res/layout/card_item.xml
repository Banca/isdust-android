<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_list_white">

    <TextView
        android:id="@+id/TextView_library_title"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/iv_gridview_item"
        android:layout_toRightOf="@+id/iv_gridview_item"
        android:layout_toEndOf="@+id/iv_gridview_item" />

    <ImageView
        android:id="@+id/iv_gridview_item"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_card_mark"
        />
    <TextView 
        android:id="@+id/TextView_library_author"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费地点"
        android:textSize="15dp"
        android:textColor="#555555"
        android:layout_alignBottom="@+id/iv_gridview_item"
        android:layout_toRightOf="@+id/iv_gridview_item"
        android:layout_toEndOf="@+id/iv_gridview_item" />

    <TextView
        android:id="@+id/TextView_library_bookrecnos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000-00-00 00:00:00"
        android:textSize="13dp"
        android:textColor="#555555"
        android:layout_alignTop="@+id/TextView_library_author"
        android:layout_alignRight="@+id/tv_gridview_item_bala"
        android:layout_alignEnd="@+id/tv_gridview_item_bala" />

    <TextView
        android:id="@+id/tv_gridview_item_bala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余额 ￥00"
        android:textSize="15dp"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignBottom="@+id/TextView_library_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
