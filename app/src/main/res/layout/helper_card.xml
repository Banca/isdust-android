<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.formal.sdusthelper.SlideMenu
        android:id="@+id/slide_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include layout="@layout/layout_menu" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_page_white"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <include layout="@layout/layout_title_bar"
                android:id="@+id/include" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/include"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout">

                <EditText
                    android:id="@+id/FormCard_editText_user"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/FormCard_editText_pwd"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/pwd"
                    android:layout_marginTop="7px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:layout_below="@+id/FormCard_editText_user"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/FormCard_button_login"
                    android:onClick="onFormCardClick"
                    android:background="@drawable/selector_ok_button"
                    android:textColor="@color/color_btn_text"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:text="查询"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/FormCard_editText_pwd"
                    android:layout_alignRight="@+id/FormCard_editText_pwd"
                    android:layout_alignEnd="@+id/FormCard_editText_pwd"
                    android:layout_toRightOf="@+id/FormCard_checkBox_savepwd"
                    android:layout_toEndOf="@+id/FormCard_checkBox_savepwd"
                    android:layout_alignParentBottom="true" />

                <CheckBox
                    android:id="@+id/FormCard_checkBox_savepwd"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/FormCard_button_login"
                    android:layout_alignTop="@+id/FormCard_button_login" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_alignRight="@+id/relativeLayout"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignStart="@+id/relativeLayout"
                android:layout_below="@+id/relativeLayout"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/FormCard_button_query"
                    android:clickable="false"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/btn_purchhistory"
                     />

                <ImageButton
                    android:id="@+id/FormCard_button_changepwd"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btn_changepwd"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:id="@+id/FormCard_button_loss"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btn_loss"
                    android:layout_below="@+id/FormCard_button_query"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:id="@+id/FormCard_button_logout"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:background="@drawable/btn_logout"
                    android:layout_below="@+id/FormCard_button_changepwd"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@+id/FormCard_button_changepwd"
                    android:layout_alignStart="@+id/FormCard_button_changepwd" />
            </RelativeLayout>

        </RelativeLayout>

    </com.formal.sdusthelper.SlideMenu>

</RelativeLayout>