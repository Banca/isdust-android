<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true" >

    <com.isdust.www.SlideMenu
        android:id="@+id/slide_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include layout="@layout/layout_menu" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_page_white"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <include layout="@layout/layout_title_bar"
                android:id="@+id/include" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/include"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout_card">

                <EditText
                    android:id="@+id/FormCard_editText_user"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:numeric="integer" android:hint="1501060275"/>

                <EditText
                    android:id="@+id/FormCard_editText_pwd"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/pwd"
                    android:layout_marginTop="7px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:layout_below="@+id/FormCard_editText_user"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:numeric="integer" android:maxLength="6" android:hint="初始密码为校园卡后6位"/>

                <Button
                    android:id="@+id/FormCard_button_login"
                    android:onClick="onFormCardClick"
                    android:background="@drawable/selector_ok_button"
                    android:textColor="@color/color_btn_text"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:text="登录"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/FormCard_editText_pwd"
                    android:layout_alignRight="@+id/FormCard_editText_pwd"
                    android:layout_alignEnd="@+id/FormCard_editText_pwd"
                    android:layout_toRightOf="@+id/FormCard_checkBox_savepwd"
                    android:layout_toEndOf="@+id/FormCard_checkBox_savepwd"
                    android:layout_alignParentBottom="true" />

                <CheckBox
                    android:id="@+id/FormCard_checkBox_savepwd"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/FormCard_button_login"
                    android:layout_alignTop="@+id/FormCard_button_login" />
            </RelativeLayout>
            <ScrollView
                android:id="@+id/widget54"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_below="@+id/relativeLayout_card">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/relativeLayout_card"
                        android:layout_alignRight="@+id/relativeLayout_card"
                        android:layout_alignEnd="@+id/relativeLayout_card"
                        android:layout_alignTop="@+id/widget54"
                        >
                        <ImageButton
                            android:id="@+id/FormCard_button_query"
                            android:onClick="onFormCardClick"
                            android:layout_width="145dp"
                            android:layout_height="150dp"
                            android:background="@drawable/btn_purchhistory_gray"
                           />
                        <ImageButton
                            android:id="@+id/FormCard_button_changepwd"
                            android:onClick="onFormCardClick"
                            android:layout_width="145dp"
                            android:layout_height="150dp"
                            android:background="@drawable/btn_changepwd_gray"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_horizontal">
                        <ImageButton
                            android:id="@+id/FormCard_button_loss"
                            android:onClick="onFormCardClick"
                            android:layout_width="145dp"
                            android:layout_height="150dp"
                            android:background="@drawable/btn_loss_gray"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            />
                        <ImageButton
                            android:id="@+id/FormCard_button_logout"
                            android:onClick="onFormCardClick"
                            android:layout_width="145dp"
                            android:layout_height="150dp"
                            android:background="@drawable/btn_logout_gray"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

    </com.isdust.www.SlideMenu>

</RelativeLayout>