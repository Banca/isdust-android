<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_page_white"
    android:orientation="vertical" 
    android:gravity="center">

    <ScrollView
        android:id="@+id/widget54"
        android:background="@color/color_page_white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/relativeLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/include"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout_first">

                <EditText
                    android:id="@+id/cmcc_first_editText_user"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:numeric="integer" />

                <EditText
                    android:id="@+id/cmcc_first_editText_pwd"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/pwd"
                    android:layout_marginTop="7px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:layout_below="@+id/cmcc_first_editText_user"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:numeric="integer" />

                <Button
                    android:id="@+id/cmcc_first_button_login"
                    android:onClick="onFormCardClick"
                    android:background="@drawable/selector_ok_button"
                    android:textColor="@color/color_btn_text"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:text="登录"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/cmcc_first_editText_pwd"
                    android:layout_alignRight="@+id/cmcc_first_editText_pwd"
                    android:layout_alignEnd="@+id/cmcc_first_editText_pwd"
                    android:layout_toRightOf="@+id/cmcc_first_checkBox_savepwd"
                    android:layout_toEndOf="@+id/cmcc_first_checkBox_savepwd"
                    android:layout_alignParentBottom="true" />

                <CheckBox
                    android:id="@+id/cmcc_first_checkBox_savepwd"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/cmcc_first_button_login"
                    android:layout_alignTop="@+id/cmcc_first_button_login" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/relativeLayout_first"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout_sec" >

                <Button
                    android:id="@+id/cmcc_sec_button_login"
                    android:onClick="onFormCardClick"
                    android:background="@drawable/selector_ok_button"
                    android:textColor="@color/color_btn_text"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:text="登录"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/cmcc_sec_editText_pwd"
                    android:layout_alignRight="@+id/cmcc_sec_editText_pwd"
                    android:layout_alignEnd="@+id/cmcc_sec_editText_pwd"
                    android:layout_toRightOf="@+id/cmcc_sec_checkBox_savepwd"
                    android:layout_toEndOf="@+id/cmcc_sec_checkBox_savepwd"
                    android:layout_alignParentBottom="true" />

                <EditText
                    android:id="@+id/cmcc_sec_editText_user"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:numeric="integer" />

                <EditText
                    android:id="@+id/cmcc_sec_editText_pwd"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/pwd"
                    android:layout_marginTop="7px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:layout_below="@+id/cmcc_sec_editText_user"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:numeric="integer" />

                <CheckBox
                    android:id="@+id/cmcc_sec_checkBox_savepwd"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/cmcc_sec_button_login"
                    android:layout_alignTop="@+id/cmcc_sec_button_login" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                >

                <ImageButton
                    android:id="@+id/cmcc_imgbtn_quicklogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:id="@+id/cmcc_imgbtn_changepwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cmcc_imgbtn_quicklogin"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true" />

                <ImageButton
                    android:id="@+id/cmcc_imgbtn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cmcc_imgbtn_changepwd"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>