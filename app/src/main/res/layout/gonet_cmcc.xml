<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_page_white"
    android:orientation="vertical" 
    android:gravity="center">

    <ScrollView
        android:id="@+id/widget54"
        android:background="@color/color_page_white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/relativeLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="441dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3.10">

                <ImageButton
                    android:id="@+id/btn_cmcc_state"
                    android:onClick="onFormCMCCClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn_cmcc_quicklogin"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true" />

                <Button
                    android:id="@+id/btn_cmcc_quicklogin"
                    android:onClick="onFormCMCCClick"
                    android:text="一键登录"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/btn_cmcc_quicklogout"
                    android:onClick="onFormCMCCClick"
                    android:text="一键下线"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_cmcc_quicklogin"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/btn_cmcc_changepwd"
                    android:onClick="onFormCMCCClick"
                    android:text="密码修改"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/btn_cmcc_quicklogout" />

                <Button
                    android:id="@+id/btn_cmcc_query"
                    android:onClick="onFormCMCCClick"
                    android:text="流量查询"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btn_cmcc_changepwd"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>