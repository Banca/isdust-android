<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecebf1"
    tools:context="jingyu.sdust.isdust.MainActivity">


    <ImageView
        android:layout_weight="7"
        android:background="#828487"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="0"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#f6f6f6"
            android:padding="2dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/card"
                android:layout_width="wrap_content"
                android:layout_height="80dip" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="一卡通"/>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="2dip"
                android:src="@drawable/menu_schedule"
                android:layout_width="wrap_content"
                android:layout_height="80dip" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="课程表"/>

        </LinearLayout>




        <LinearLayout
            android:background="#f6f6f6"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="2dip"
                android:src="@drawable/menu_mark"
                android:layout_width="wrap_content"
                android:layout_height="80dip" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="成绩查询"/>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="2dip"
                android:src="@drawable/menu_classroom"
                android:layout_width="wrap_content"
                android:layout_height="80dip" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="空教室查询"/>

        </LinearLayout>



        <LinearLayout
            android:background="#f6f6f6"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="2dip"
                android:src="@drawable/menu_library"
                android:layout_width="wrap_content"
                android:layout_height="80dip" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="馆藏查询"/>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="2dip"
                android:src="@drawable/menu_person"
                android:layout_width="wrap_content"
                android:layout_height="80dip" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="个人中心"/>

        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:layout_weight="8"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/menu_broadcast"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="7dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="系统公告"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:textSize="12sp"
                android:text="系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题系统问题"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="18dip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/menu_schedule"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />
        <LinearLayout
            android:layout_marginLeft="5dip"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程表"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginRight="15dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天周五，一节课"
                android:textSize="12sp"/>
            <ListView
                android:layout_marginBottom="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>
