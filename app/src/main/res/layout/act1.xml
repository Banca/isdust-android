<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ecebf1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/bg_title_bar"
        android:gravity="center_vertical"
        android:id="@+id/relativeLayout">

        <!--ImageView
            android:onClick="onTitleBarClick"
            android:id="@+id/title_bar_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="3.0dip"
            android:gravity="center"
            android:src="@drawable/ic_top_bar_category" /-->

        <TextView
            android:id="@+id/title_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="75.0dip"
            android:paddingRight="75.0dip"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>


    <ScrollView
        android:background="#ecebf1"
        android:layout_marginBottom="1dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ecebf1">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dip" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_gravity="bottom"
                android:background="#33000000"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片标题"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal" >

                    <View
                        android:id="@+id/dot_0"
                        style="@style/spiner_indicator" />
                    <View
                        android:id="@+id/dot_1"
                        style="@style/spiner_indicator" />
                    <View
                        android:id="@+id/dot_2"
                        style="@style/spiner_indicator" />
                    <View
                        android:id="@+id/dot_3"
                        style="@style/spiner_indicator" />
                    <View
                        android:id="@+id/dot_4"
                        style="@style/spiner_indicator" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_weight="0"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#f6f6f6"
                android:padding="2dip"
                android:layout_weight="1"
                android:onClick="onFormMainClick"
                android:id="@+id/btn_main_card"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/card"
                    android:layout_width="wrap_content"
                    android:layout_height="46dip"
                    android:id="@+id/imageView10" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="一卡通"/>

            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/btn_main_schedule"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:onClick="onFormMainClick"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dip"
                    android:src="@drawable/menu_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="课程表"/>

            </LinearLayout>




            <LinearLayout
                android:background="#f6f6f6"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/btn_main_score"
                android:onClick="onFormMainClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dip"
                    android:src="@drawable/menu_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="成绩查询"/>

            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/btn_main_emptyroom"
                android:orientation="vertical"
                android:onClick="onFormMainClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dip"
                    android:src="@drawable/menu_classroom"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="空教室查询"/>

            </LinearLayout>



            <LinearLayout
                android:background="#f6f6f6"
                android:layout_weight="1"
                android:id="@+id/btn_main_library"
                android:orientation="vertical"
                android:onClick="onFormMainClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dip"
                    android:src="@drawable/menu_library"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="馆藏查询"/>

            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/btn_main_kuaitong"
                android:onClick="onFormMainClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dip"
                    android:src="@drawable/menu_person"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="个人中心"/>

            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="18dip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/menu_broadcast"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_width="40dip"
                android:layout_height="40dip"
                />
            <LinearLayout
                android:layout_marginLeft="7dip"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="系统公告"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/notification"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:textSize="11sp"
                    android:text="系统公告"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="18dip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/menu_schedule"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_width="40dip"
                android:layout_height="40dip"
                />
            <LinearLayout
                android:layout_marginLeft="5dip"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程表"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/kecheng"
                    android:layout_marginRight="15dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天周五，一节课"
                    android:textSize="13sp"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>