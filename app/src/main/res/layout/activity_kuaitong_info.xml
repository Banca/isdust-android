<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_page_white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/subpage_title_bar"
                 android:id="@+id/include" />

        <ScrollView android:background="@color/color_page_white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/include">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt0"
                    android:text="用户状态："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info0"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt1"
                    android:text="本期开始："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info1"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt2"
                    android:text="套餐名称："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info2"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt3"
                    android:text="套餐金额："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info3"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt4"
                    android:text="套餐流量："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info4"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt5"
                    android:text="套餐剩余："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info5"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt6"
                    android:text="帐户余额："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info6"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt7"
                    android:text="已用上传："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info7"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt8"
                    android:text="已用下载："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info8"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt9"
                    android:text="已用合计："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info9"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt10"
                    android:text="套外单价："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info10"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt11"
                    android:text="当前在线："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info11"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:drawableLeft="@drawable/kt12"
                    android:text="本期费用："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info12"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/kt13"
                    android:text="下月余额："
                    android:gravity="center_vertical"
                    android:id="@+id/text_kuaitong_info13"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#dddddd" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>