<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.formal.sdusthelper.SlideMenu
        android:id="@+id/slide_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include layout="@layout/layout_menu" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_view_white"
            android:orientation="vertical"
            android:gravity="center">
            <include layout="@layout/layout_title_bar" />

            <ScrollView
                android:id="@+id/widget54"
                android:background="@color/color_view_white"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <ImageView
                                android:id="@+id/image_kuaitong_state"
                                android:background="@drawable/quicklogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                 />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:id="@+id/text_kuaitong_flowmeter"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="流量剩余："
                                android:textSize="20sp"
                                 />
                            <TextView
                                android:id="@+id/text_kuaitong_balance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="下月余额："
                                android:textSize="20sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <Button
                            android:id="@+id/btn_kuaitong_infomation"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/color_view_white"
                            android:drawableTop="@drawable/quicklogin"
                            android:text="账户信息"
                             />
                        <Button
                            android:id="@+id/btn_kuaitong_package"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/color_view_white"
                            android:drawableTop="@drawable/quicklogin"
                            android:text="更换套餐"
                            />
                        <Button
                            android:id="@+id/btn_kuaitong_pay"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/color_view_white"
                            android:drawableTop="@drawable/quicklogin"
                            android:text="充值"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <Button
                            android:id="@+id/btn_kuaitong_changepwd"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/color_view_white"
                            android:drawableTop="@drawable/quicklogin"
                            android:text="开停机"
                            />
                        <Button
                            android:id="@+id/btn_kuaitong_switch"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/color_view_white"
                            android:drawableTop="@drawable/quicklogin"
                            android:text="更换套餐"
                            />
                        <Button
                            android:id="@+id/btn_kuaitong_back"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/color_view_white"
                            android:drawableTop="@drawable/quicklogin"
                            android:text="返回"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </com.formal.sdusthelper.SlideMenu>
</RelativeLayout>