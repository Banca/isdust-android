<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_page_white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/subpage_title_bar"
            android:id="@+id/include" />

        <ScrollView
            android:id="@+id/widget54"
            android:background="@color/color_page_white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/include">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:layout_below="@+id/include"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/relativeLayout_first">

                    <EditText
                        android:id="@+id/cmcc_first_editText_user"
                        android:background="@color/color_btn_white"
                        android:drawableLeft="@drawable/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:singleLine="true"
                        android:numeric="integer" />

                    <EditText
                        android:id="@+id/cmcc_first_editText_pwd"
                        android:background="@color/color_btn_white"
                        android:drawableLeft="@drawable/pwd"
                        android:layout_marginTop="7px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberPassword"
                        android:ems="10"
                        android:layout_below="@+id/cmcc_first_editText_user"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:singleLine="true"
                        android:numeric="integer" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_below="@+id/relativeLayout_first"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/relativeLayout_sec"
                    android:layout_weight="0.45">

                    <Button
                        android:id="@+id/btn_cmccacnt_ok"
                        android:onClick="onFormCMCCAcntlick"
                        android:background="@drawable/selector_ok_button"
                        android:textColor="@color/color_btn_text"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:text="确定"
                        android:layout_alignBottom="@+id/checkBox_cmcc_savepwd"
                        android:layout_toRightOf="@+id/checkBox_cmcc_savepwd"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                    <CheckBox
                        android:id="@+id/checkBox_cmcc_savepwd"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:text="记住密码"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>